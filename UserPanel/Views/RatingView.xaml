<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="UserPanel.Views.RatingView"
        Height="275.016" Width="475.725" Background="White">

    <Canvas>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Canvas.Left="163" Canvas.Top="100">
            <StackPanel>
                <Grid x:Name="gdRating" Margin="10" MouseLeave="gdRating_MouseLeave">
                    <WrapPanel x:Name="pnlMinus"/>
                    <WrapPanel x:Name="pnlPlus"/>
                </Grid>
                <Separator Margin="0,10,0,10"/>
                <WrapPanel Margin="5,0,5,5">
                    <TextBlock x:Name="lblCaption" FontSize="18" Text="Your Rating - " />
                    <TextBlock x:Name="lblRating" FontSize="18" Text="{Binding Rating, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </WrapPanel>

            </StackPanel>
        </Border>


        <Button Content="OK" Command="{Binding OkCommand}" Width="75" Canvas.Left="351" Canvas.Top="223"/>

        <Button Canvas.Left="394" Canvas.Top="10" Command="{Binding CancelCommand}" />
        
    </Canvas>

</UserControl>
